
@{
    ViewData["Title"] = "SearchStudent";
}

<h1 class="text-center">Search Student by Id</h1>

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="row mt-lg-5"></div>
            <div class="row mt-lg-5"></div>
            <form asp-action="ViewStudentById">
                <div class="form-group">
                    <label for="id" class="h5">Student Id: </label>
                    <input id="id" name="studentId" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Search Student" class="btn btn-success" />
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>

